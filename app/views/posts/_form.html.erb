<div class="d-flex flex-column align-items-center">
  <div class="col-6">
    <%= form_with model: @post do |form| %>
      <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      <% end %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <div><%= form.text_field :title, class: "form-control bg-light", autocomplete: 'off' %></div>
      </div>
      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <div><%= form.text_area :body, class: "form-control bg-light", size: "60x10" %></div>
      </div>
      <div>
        <%= form.submit class: "btn btn-outline-warning" %>
      </div>
    <% end %>
  </div>
</div>