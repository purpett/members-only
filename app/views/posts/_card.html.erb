<div class="card mb-3 bg-light">
  <div class="card-body">
    <h5 class="card-title"> <%= link_to post.title, post, class: "link-warning text-decoration-none"%> </h5>
    <h6 class="card-subtitle mb-2 text-muted small">
      <% if current_user %>
        <%= post.user.username %>
      <% end %>
    </h6>
    <p class="card-text text-dark"><%= post.body%></p>
  </div>
  <div class="card-footer text-end py-0">
    <% if current_user == post.user %>
      <%= link_to edit_post_path(post), class: "card-link" do %><%= image_tag "pencil-outline.svg", title: "Edit post", height: 20 %><% end %>
      <%= button_to post_path(post), method: :delete, class: "card-link btn btn-link ", form_class: "d-inline" do %><%= image_tag "trash-can-outline.svg", title: "Delete post", height: 20 %><% end %>
    <%end%>
  </div>
</div>